{# Policy Template for a Juniper MX L2VPN Routing Instance IRB towards a Cisco ASR 920 device #}
delete routing-instances {{ customer_name }}-{{ service_instance_id }}
delete interfaces irb unit {{ pw_id }}
delete routing-options static route {{ ipv4_lan }} next-hop {{ ipv4_nexthop }}
delete routing-options rib inet6.0 static route {{ ipv6_lan }} next-hop {{ ipv6_nexthop }}
commit and-quit